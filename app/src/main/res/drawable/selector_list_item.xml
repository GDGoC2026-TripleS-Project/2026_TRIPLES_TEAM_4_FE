<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item><shape><solid android:color="@color/list_item_pressed" /></shape></item>
            <item android:top="-1dp" android:left="-1dp" android:right="-1dp">
                <shape><stroke android:width="1dp" android:color="@color/list_divider" /></shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item><shape><solid android:color="@color/list_item_default" /></shape></item>
            <item android:top="-1dp" android:left="-1dp" android:right="-1dp">
                <shape><stroke android:width="1dp" android:color="@color/list_divider" /></shape>
            </item>
        </layer-list>
    </item>
</selector>
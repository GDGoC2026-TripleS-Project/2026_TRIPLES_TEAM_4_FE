<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/green02" />
                </shape>
            </item>

            <item android:top="-1dp" android:left="-1dp" android:right="-1dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/border_gray" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray01" />
                </shape>
            </item>

            <item android:top="-1dp" android:left="-1dp" android:right="-1dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/border_gray" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="133.54dp"
        android:layout_height="63.33dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/ic_uni_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="유니메이트에 오신 걸 환영해요!"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/green09"
        android:textSize="18sp"
        android:includeFontPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateTeam"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginTop="74dp"
        android:background="@drawable/shape_button_create"
        android:text="팀스페이스 생성"
        android:textColor="@color/gray10"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="@font/pretendard_medium"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnJoinTeam"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_button_join"
        android:text="팀스페이스 참여"
        android:textColor="@color/gray10"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="@font/pretendard_medium"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateTeam" />

</androidx.constraintlayout.widget.ConstraintLayout>
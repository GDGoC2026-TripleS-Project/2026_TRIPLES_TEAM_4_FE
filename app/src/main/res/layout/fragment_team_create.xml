<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingBottom="40dp">

        <ImageView
            android:id="@+id/ivCreateTitleLogo"
            android:layout_width="116dp"
            android:layout_height="36dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_unimate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCreateSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="팀스페이스 생성"
            android:textColor="#151515"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCreateTitleLogo" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTeamProfile"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="51.5dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCreateSubTitle">

            <ImageView
                android:id="@+id/ivTeamProfilePlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/profile_bg"
                android:scaleType="centerInside"
                android:src="@drawable/ic_profile_user" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ivAddTeamPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_circle"
            app:layout_constraintBottom_toBottomOf="@id/cvTeamProfile"
            app:layout_constraintEnd_toEndOf="@id/cvTeamProfile"
            android:translationX="5dp"
            android:translationY="5dp" />

        <TextView
            android:id="@+id/tvLabelTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="팀 명 "
            android:textColor="#2F2F2F"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvTeamProfile" />

        <TextView
            android:id="@+id/tvLabelRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="(필수)"
            android:textColor="#B4D75C"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelTeamName"
            app:layout_constraintStart_toEndOf="@id/tvLabelTeamName" />

        <EditText
            android:id="@+id/etTeamName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_edittext_bg"
            android:hint="팀 명을 입력하세요."
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:privateImeOptions="defaultInputmode=korean"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelTeamName" />

        <TextView
            android:id="@+id/tvLabelTeamDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="팀 소개 "
            android:textColor="#2F2F2F"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etTeamName" />

        <TextView
            android:id="@+id/tvLabelOptional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="(선택)"
            android:textColor="#A4A4A4"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelTeamDesc"
            app:layout_constraintStart_toEndOf="@id/tvLabelTeamDesc" />

        <EditText
            android:id="@+id/etTeamDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_edittext_bg"
            android:gravity="top"
            android:hint="팀을 소개하세요."
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:privateImeOptions="defaultInputmode=korean"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelTeamDesc" />

        <TextView
            android:id="@+id/tvLabelWorkDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="팀 작업일 "
            android:textColor="#2F2F2F"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etTeamDesc" />

        <TextView
            android:id="@+id/tvLabelWorkOptional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="(선택)"
            android:textColor="#A4A4A4"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelWorkDate"
            app:layout_constraintStart_toEndOf="@id/tvLabelWorkDate" />

        <LinearLayout
            android:id="@+id/layoutWorkTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_edittext_bg"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelWorkDate">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="시작"
                    android:textColor="#2F2F2F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_date_chip_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="2026. 2. 23"
                    android:textColor="#2F2F2F"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_date_chip_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="오후 1:00"
                    android:textColor="#2F2F2F"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="종료"
                    android:textColor="#2F2F2F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_date_chip_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="2026. 2. 23"
                    android:textColor="#2F2F2F"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_date_chip_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="오후 2:00"
                    android:textColor="#2F2F2F"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvLabelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="팀 컬러 지정 "
            android:textColor="#2F2F2F"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutWorkTime" />

        <TextView
            android:id="@+id/tvLabelColorRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="(필수)"
            android:textColor="#B4D75C"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvLabelColor"
            app:layout_constraintStart_toEndOf="@id/tvLabelColor" />

        <GridLayout
            android:id="@+id/layoutColorPalette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:columnCount="5"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelColor">

            <ImageButton android:id="@+id/btnColorYellow" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_yellow" android:src="@drawable/ic_check_white" android:scaleType="centerInside" />
            <ImageButton android:id="@+id/btnColorBeige" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_beige" />
            <ImageButton android:id="@+id/btnColorPeriwinkle" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_periwinkle" />
            <ImageButton android:id="@+id/btnColorLavender" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_lavender" />
            <ImageButton android:id="@+id/btnColorMagenta" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_magenta" />
            <ImageButton android:id="@+id/btnColorPinkLight" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_pink_light" />
            <ImageButton android:id="@+id/btnColorCoral" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_coral" />
            <ImageButton android:id="@+id/btnColorCoralLight" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_coral_light" />
            <ImageButton android:id="@+id/btnColorMint" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_mint" />
            <ImageButton android:id="@+id/btnColorAqua" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="8dp" android:background="@drawable/shape_circle_base" android:backgroundTint="@color/team_aqua" />

        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCompleteCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_create"
            android:stateListAnimator="@null"
            android:text="완료"
            android:textColor="#151515"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutColorPalette" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.087" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.913" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_logo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.092" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_profile_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.286" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_uni_logo"
        android:scaleType="fitStart"
        app:layout_constraintTop_toTopOf="@id/g_logo_top"
        app:layout_constraintStart_toStartOf="@id/g_start" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile"
        android:layout_width="103dp"
        android:layout_height="103dp"
        app:cardCornerRadius="51.5dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/g_profile_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/iv_profile_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/profile_bg"
            android:src="@drawable/ic_profile_user"
            android:scaleType="centerInside" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_edittext_default"
        android:hint="이름"
        android:paddingLeft="14dp"
        android:textSize="14sp"
        android:inputType="text"
        android:privateImeOptions="defaultInputMode=korean"
        app:layout_constraintTop_toBottomOf="@id/cv_profile"
        app:layout_constraintStart_toStartOf="@id/g_start"
        app:layout_constraintEnd_toEndOf="@id/g_end" />

    <FrameLayout
        android:id="@+id/layout_search"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="@id/g_start"
        app:layout_constraintEnd_toEndOf="@id/g_end">
        <EditText
            android:id="@+id/et_school_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edittext_default"
            android:hint="학교 이름 검색 및 선택"
            android:paddingLeft="14dp"
            android:paddingRight="40dp"
            android:textSize="14sp"
            android:inputType="text"
            android:privateImeOptions="defaultInputMode=korean"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="14dp"
            android:src="@drawable/ic_search"
            app:tint="@color/unimate_main" />
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_profile_register"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="등록"
        android:textColor="@color/unimate_green"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_register_bg"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_search"
        app:layout_constraintStart_toStartOf="@id/g_start"
        app:layout_constraintEnd_toEndOf="@id/g_end" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_school_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:visibility="gone"
        android:background="@drawable/shape_school_list_bg"
        android:elevation="0dp"
        android:translationY="-1dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/layout_search"
        app:layout_constraintStart_toStartOf="@id/g_start"
        app:layout_constraintEnd_toEndOf="@id/g_end" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="24dp">

    <!-- 로고 위치 조정 (가이드라인에 따라 중앙 배치) -->
    <ImageView
        android:id="@+id/ivJoinLogo"
        android:layout_width="167dp"
        android:layout_height="47dp"
        android:layout_marginTop="211dp"
        android:src="@drawable/ic_unimate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLabelJoinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="초대코드"
        android:textColor="@color/gray09"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivJoinLogo" />

    <!-- 입력창: 글자색을 더 명확하게(gray09) 수정하고 힌트 색상 추가 제안 -->
    <EditText
        android:id="@+id/etJoinCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_edittext_default"
        android:fontFamily="@font/pretendard_medium"
        android:hint="초대코드를 입력하세요."
        android:inputType="textCapCharacters"
        android:paddingHorizontal="16dp"
        android:textColor="@color/gray09"
        android:textColorHint="@color/gray06"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelJoinCode" />

    <!-- 확인 버튼: 글자색을 흰색으로 변경(배경이 진할 경우 대비) 또는 현재 유지 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnJoinConfirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_button_join"
        android:elevation="0dp"
        android:fontFamily="@font/pretendard_semibold"
        android:stateListAnimator="@null"
        android:text="확인"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etJoinCode" />

</androidx.constraintlayout.widget.ConstraintLayout>
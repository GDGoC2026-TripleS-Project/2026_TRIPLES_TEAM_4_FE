<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".ui.teamspace.EditTeamSpaceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="56dp">

        <!-- 상단: 뒤로가기 + 제목  -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageButton
                android:id="@+id/editTeamSpaceBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical|start"
                android:paddingStart="8dp"
                android:src="@drawable/ic_backward"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="뒤로 가기" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/team_space_edit"
                android:textColor="@color/gray09"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- 유저 아이콘 + 플러스 버튼 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/editTeamSpaceUserIcon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_user_edit"
                android:contentDescription="팀 아이콘" />

            <ImageButton
                android:id="@+id/editTeamSpacePhotoEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_icon_edit"
                android:background="@drawable/bg_circle"
                android:contentDescription="사진 설정"
                android:scaleType="center" />
        </FrameLayout>

        <!-- 팀명  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:baselineAligned="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀명 "
                android:textColor="@color/gray09"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="@color/main_green"
                android:textSize="14sp" />
        </LinearLayout>
        <EditText
            android:id="@+id/editTeamSpaceName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_team_space_field"
            android:hint="@string/enter_team_name"
            android:textColorHint="@color/gray06"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:textColor="@color/gray06" />

        <!-- 팀 소개  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:baselineAligned="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 소개 "
                android:textColor="@color/gray09"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(선택)"
                android:textColor="@color/gray04"
                android:textSize="14sp" />
        </LinearLayout>
        <EditText
            android:id="@+id/editTeamSpaceIntro"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_team_space_field"
            android:gravity="top"
            android:hint="@string/introduce_team"
            android:textColorHint="@color/gray06"
            android:inputType="textMultiLine"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:textSize="14sp"
            android:textColor="@color/gray06" />

        <!-- 팀 작업일  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:baselineAligned="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 작업일 "
                android:textColor="@color/gray09"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="@color/main_green"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_work_period_box"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/start"
                    android:textColor="@color/gray08"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/editTeamSpaceStartDate"
                    style="@style/body2_m_14"
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_date_time_btn"
                    android:backgroundTint="@null"
                    android:textColor="@color/gray06"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="2026. 2. 23" />
                <Button
                    android:id="@+id/editTeamSpaceStartTime"
                    style="@style/body2_m_14"
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_date_time_btn"
                    android:backgroundTint="@null"
                    android:textColor="@color/gray06"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="오후 1:00" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/gray_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/end"
                    android:textColor="@color/gray08"
                    android:textSize="14sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/editTeamSpaceEndDate"
                    style="@style/body2_m_14"
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_date_time_btn"
                    android:backgroundTint="@null"
                    android:textColor="@color/gray06"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="2026. 2. 23" />
                <Button
                    android:id="@+id/editTeamSpaceEndTime"
                    style="@style/body2_m_14"
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_date_time_btn"
                    android:backgroundTint="@null"
                    android:textColor="@color/gray06"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="오후 2:00" />
            </LinearLayout>
        </LinearLayout>

        <!-- 종료된 팀으로 설정  -->
        <LinearLayout
            android:id="@+id/editTeamSpaceSetEnded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/editTeamSpaceEndCheckIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_end_unselected"
                android:contentDescription="종료된 팀 설정" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/set_ended_team"
                android:textColor="@color/gray09"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 완료 버튼 -->
        <Button
            android:id="@+id/editTeamSpaceComplete"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/main_green"
            android:text="@string/complete"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>

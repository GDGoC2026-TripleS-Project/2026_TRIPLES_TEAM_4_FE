<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- 헤더: Unimate + 알림 -->
        <include
            android:id="@+id/header"
            layout="@layout/include_header_unimate" />

        <!-- 주간 캘린더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/homeMonthYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/body2_m_14"
                    tools:text="2026년 2월" />

                <ImageButton
                    android:id="@+id/homePrevWeek"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="이전 주"
                    android:src="@drawable/ic_calender_left"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/homeNextWeek"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="다음 주"
                    android:src="@drawable/ic_calender_right"
                    app:tint="@color/black" />
            </LinearLayout>

            <!-- 요일: 일 월 화 수 목 금 토 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homeSun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="일"
                    android:textColor="@color/sunday_red"
                    style="@style/body2_r_14" />
                <TextView
                    android:id="@+id/homeMon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="월"
                    style="@style/body2_r_14" />
                <TextView
                    android:id="@+id/homeTue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="화"
                    style="@style/body2_r_14" />
                <TextView
                    android:id="@+id/homeWed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="수"
                    style="@style/body2_r_14" />
                <TextView
                    android:id="@+id/homeThu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="목"
                    style="@style/body2_r_14" />
                <TextView
                    android:id="@+id/homeFri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="금"
                    style="@style/body2_r_14" />
                <TextView
                    android:id="@+id/homeSat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="토"
                    style="@style/body2_r_14" />
            </LinearLayout>

            <!-- 날짜 7개 -->
            <LinearLayout
                android:id="@+id/homeWeekDatesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">
                <!-- 동적 추가 -->
            </LinearLayout>

            <!-- 날짜 밑 작은 동그라미/일정 표시 (선택 시) -->
            <LinearLayout
                android:id="@+id/homeWeekEventsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:visibility="gone">
            </LinearLayout>
        </LinearLayout>

        <!-- 오늘의 일: 둥근 사각형 카드뷰 (접기/펼치기) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_marginHorizontal="16dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/homeTodayCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:id="@+id/homeTodayCardInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <ScrollView
                    android:id="@+id/homeTodayCardContentWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/homeTodayTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/today_tasks"
                        style="@style/body2_m_14" />

                    <LinearLayout
                        android:id="@+id/homeTodayTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:id="@+id/homePersonalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/personal_schedule"
                        style="@style/body2_m_14" />

                        <LinearLayout
                            android:id="@+id/homePersonalTasksContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="4dp" />
                    </LinearLayout>
                </ScrollView>

                <ImageButton
                    android:id="@+id/homeExpandArrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="접기/펼치기"
                    android:src="@drawable/ic_arrow_down"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 나의 팀 스페이스 -->
        <TextView
            android:id="@+id/homeTeamSpaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/my_team_space"
            style="@style/body2_m_14" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/homeTeamSpaceIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!-- 팀 원형 아이콘 + 플러스 버튼 동적 추가 -->
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>

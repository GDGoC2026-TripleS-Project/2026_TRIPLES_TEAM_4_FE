<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F6DA">

    <!-- 가로: 피그마 frame 412에서 left=39, width=340 -->
    <!-- 39/412 = 0.09466019 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_start_39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.09466" />

    <!-- (39+340)/412 = 379/412 = 0.91990291 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_end_340"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.91990" />

    <!-- 세로: 로고 top=271 -->
    <!-- 271/917 = 0.29552890 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_logo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.29553" />

    <!-- 세로: 환영문구 블록 top=353 (이전 디자인 값 유지) -->
    <!-- 353/917 = 0.384951 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_title_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.41038"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <!-- (버튼이 필요하면 유지) 세로: buttons top=503 -->
    <!-- 503/917 = 0.548527 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_buttons_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54853" />


    <!-- =========================
         Logo (top=271, center)
         ========================= -->
    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="134dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_uni_logo"
        app:layout_constraintTop_toTopOf="@id/g_logo_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- =========================
         Title area (top=353 기준)
         내부에서 '서브 top=28, left=-13' 재현하려고 ConstraintLayout 사용
         ========================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/g_title_top"
        app:layout_constraintStart_toStartOf="@id/g_start_39"
        app:layout_constraintEnd_toEndOf="@id/g_end_340">

        <!-- 환영 문구: width 232, height 26 느낌 (lineHeight 26) -->
        <TextView
            android:id="@+id/tv_login_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유니메이트에 오신 걸 환영해요!"
            android:textColor="#294B01"
            android:textSize="20sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:lineHeight="26sp"
            android:letterSpacing="-0.05"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 서브 문구:
             피그마 값: top=28, left=-13 (타이틀 기준 상대 오프셋처럼 보임)
             -> 환영 lineHeight 26이므로 marginTop 약 2로 맞추고,
                left=-13은 translationX로 반영
        -->
        <TextView
            android:id="@+id/tv_login_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="-0.03125"
            android:lineHeight="20sp"
            android:text="간편한 소셜 로그인으로 바로 시작해보세요."
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="16sp"
            android:translationX="-13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.725"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login_welcome" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- =========================
         Buttons (원하면 그대로 사용)
         ========================= -->
    <LinearLayout
        android:id="@+id/layout_login_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/g_buttons_top"
        app:layout_constraintStart_toStartOf="@id/g_start_39"
        app:layout_constraintEnd_toEndOf="@id/g_end_340">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kakao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="카카오 로그인"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="#F9DE2C"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_kakao_logo"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconSize="24dp"
            app:iconTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_naver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:text="네이버 로그인"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="#3DB54C"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_naver_logo"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconSize="30dp"
            app:iconTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:text="구글 로그인"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="8dp"
            app:strokeColor="#DCDCDC"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_google_logo"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconSize="22dp"
            app:iconTint="@null" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
